body {
    margin: 0;
    padding: 0;
    background-color: #252830;
    color: white;
    font-family: "Roboto";
    font-weight: 300;
}
a, span {
   outline: 0;
}

h1, h2, h3 {
    font-weight: 300;
}
h3 {
    color: #cfd2da;
    font-size: 1em;
}



button, .button {
    background: none;
    border: 1px solid rgb(25, 151, 198);
    color: rgb(25, 151, 198);
    font-weight: 400;
    line-height: 21px;
    font-size: 1em;
    border-radius: 4px;
    padding: 6px 20px;
    cursor: pointer;
    text-decoration: none;

    &:hover, &.ajax {
        background-color: #1997c6;
        color: white;
    }
}

input, select {
    background-color: #434857;
    width: 100%;
    display: block;
    margin-top: 0;
    border-radius: 4px;
    border: none;
    color: #fff;
    font-size: 16px;
    font-weight: 300;
    line-height: 25.6px;
    font-family: inherit;
    padding: 6px 15px 6px 15px;
    margin-bottom: 4em;
    box-sizing: border-box;
}
select {
    height: 38px;
    padding-left: 10px;
    width: 95%;
    margin-bottom: 0.5em;
}

div.sub {
    padding: 0.5em 0em 0 1em;
    border-left: 1px solid rgb(72, 72, 72);

    label {
        font-size: 0.8em;
        text-transform: uppercase;
    }
}

#mainSection {
    text-align: center;

    h2 {
        position: absolute;
        text-align: center;
        width: 100%;
        z-index: 100;
        background-color: rgba(37, 40, 48, 0.7);
        padding: 10px 0;

    }

    button {
        position: absolute;
        bottom: 4em;
        right: 4em;
        z-index: 100;
    }

    .punctum {
        position: absolute;
        width: 40px;
        height: 40px;
        background: #fe2323;
        border-radius: 30px;
        z-index: 200;
        opacity: 0.6;

        animation-name: aparecer;
        animation-duration: 0.6s;
    }

    @keyframes aparecer {
        from {opacity: 0}
        to {opacity: 0.6}
    }

    .imgWrapper {
        position: relative;
        height: 100%;

        img {
            height: 100%;
            cursor: crosshair;
        }
    }
}

#thanks {
    h2 {
        text-align: center;
    }
}

#hello {
    > div {
        text-align: center;

        p {
            line-height: 2em;
            text-align: center;
            font-size: 1.2em;
        }
        button {
            margin-top: 3em;
            margin-bottom: 5em;
            clear: both;
        }
    }
}

#frmDatosSujeto {
    ul {
        max-width: 900px;
        text-align: left;
        list-style: none;
        padding: 0;
        margin: 0 auto;
        overflow: hidden;

        li {
            label {
                display: block;
                margin-bottom: 0.5em;
            }
            input {
                margin-bottom: 0.5em;
                width: 95%;
            }
            float: left;
            width: 50%;
        }
    }
}
